<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Register!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
           {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% block body %}
    <!-- component -->
<div class="min-h-screen bg-gradient-to-r from-purple-700 to-purple-900 py-6 flex flex-col justify-center sm:py-12">
	<div class="relative py-3 sm:max-w-xl sm:mx-auto">
		<div
			class="absolute inset-0 bg-gradient-to-r from-purple-900 to-purple-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
		</div>
		<div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
			<div class="max-w-md mx-auto">
				<div>
					<h1 class="text-2xl font-semibold">Login Form with Floating Labels</h1>
				</div>
				<div class="divide-y divide-gray-200">
					<div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                        {{ form_start(registrationForm) }}
						<div class="relative">
							{{ form_row(registrationForm.email,  {'attr': {'class': 'peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600'}}) }}
						</div>
						<div class="relative">
							 {{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr': {'class': 'peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600'}
        }) }}
						</div>
						<div class="relative">
                                {{ form_row(registrationForm.agreeTerms) }}
							<button type="submit" class="bg-blue-500 text-white rounded-md px-2 py-1">Submit</button>
						</div>
                        {{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
  {% endblock %}
    </body>
</html>

